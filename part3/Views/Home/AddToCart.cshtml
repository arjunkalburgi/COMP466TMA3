@model part3.Models.ProductItem

@{
    ViewData["Title"] = "item.name" + " Page";
    var items = ViewData["productitems"] as List<ProductItem>;
    var price = 0.0; 
}

<div class="container row editcomponents">
    <ul class="collection with-header">
        <li class="collection-header"><h4>Your Cart Items</h4><br>Items as a part of the computer are also here</li>
            @foreach (var item in items) {
                <li class="collection-item avatar">
                    <i class="material-icons circle red">play_arrow</i>
                    <span class="title">@item.name</span>
                    <p>@item.price<br>@item.description</p>
                    @{price+=item.price}
                </li>
            }
    </ul>
    Total: $@price
</div>
<div class="row reviews"></div>