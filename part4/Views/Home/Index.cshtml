@model part4.ViewModels.ProductsList

@{
    ViewData["Title"] = "Home Page";
    var products = ViewData["ProductsList"] as ProductsList;
    var comps = ViewData["ComputersList"] as ProductsList;
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img class="gridimage" src="~/images/banner1.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img class="gridimage" src="~/images/banner2.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img class="gridimage" src="~/images/banner3.png" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img class="gridimage" src="~/images/banner4.gif" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn how Microsoft's Azure cloud platform allows you to build, deploy, and scale web apps.
                    <a class="btn btn-default orange" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<br><br><br>

<div class="container body-content">
    <div class="row productlist">
        <form asp-controller="Home" asp-action="Computereditpage2" class="col s6 m4 l2">
              <button type="submit" class="center promo promo-example">
                <img class="gridimage" src="~/images/computer1.jpg"/>
                <input type="hidden" name="img" value="/images/computer1.jpg" />
                <p class="promo-caption center">Computer1</p>
                <input class="gridimage" type="hidden" name="name" value="Computer1" />
                <p class="light center">Price: $59.99</p>
                <input type="hidden" name="price" value="9.99" />
                <input type="hidden" name="description" value="This is a first level computer." />
                <input type="hidden" name="RAM" value=null />
                <input type="hidden" name="HD" value=null />
                <input type="hidden" name="CPU" value=null />
                <input type="hidden" name="OS" value=null />
                <input type="hidden" name="Display" value=null />
                <input type="hidden" name="SoundCard" value=null />
                <input type="hidden" name="componentname" value=null />
                <input type="hidden" name="componentprice" value=null />
              </button>
        </form>
        @foreach(var product in comps.ComputerItem) {
            <form asp-controller="Home" asp-action="Productpage" class="col s6 m4 l2">
                  <button class="center promo promo-example">
                    <img class="gridimage" src="@product.image"/>
                    <p class="promo-caption center">@product.name</p>
                    <p class="light center">Price: $@product.price</p>
                    <input type="hidden" name="name" value="@product.name" />
                    <input type="hidden" name="price" value="@product.price" />
                    <input type="hidden" name="description" value="@product.description" />
                    <input type="hidden" name="image" value="@product.image" />
                    <input type="hidden" name="id" value="@Guid.NewGuid()" />
                  </button>
            </form>
        }
        @foreach(var product in products.ProductItem) {

            <form asp-controller="Home" asp-action="Productpage" class="col s6 m4 l2">
                  <button class="center promo promo-example">
                    <img class="gridimage" src="@product.image"/>
                    <p class="promo-caption center">@product.name</p>
                    <p class="light center">Price: $@product.price</p>
                    <input type="hidden" name="name" value="@product.name" />
                    <input type="hidden" name="price" value="@product.price" />
                    <input type="hidden" name="description" value="@product.description" />
                    <input type="hidden" name="image" value="@product.image" />
                    <input type="hidden" name="id" value="@Guid.NewGuid()" />
                  </button>
            </form>

        }
    </div>
</div>
